@{
  Layout = "_Layout";
}

@model Registry.Models.Student

<h2>Add a Course</h2>

<h2>Add a course for: @Html.DisplayFor(model => model.StudentName)</h2>

@using (Html.BeginForm())
{
    @Html.HiddenFor(model => model.StudentId)

    @Html.Label("Select course")
    @Html.DropDownList("CourseId")

    <input type="submit" value="Save" />
}

<p>@Html.ActionLink("Back to students", "Index")</p>