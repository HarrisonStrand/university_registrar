@{
  Layout = "_Layout";
}

@using Registry.Models;
@model List<Registry.Models.Student>;

<h1>Enrolled Students:</h1>

@if (@Model.Count == 0)
{
  <h2>No students have been enrolled yet...</h2>
}

@foreach(Student student in Model)
{
  <li>@Html.ActionLink($"{student.StudentName}", "Details", new { id = student.StudentId })</li>
}

<p>@Html.ActionLink("Add New Student", "Create")</p>
<p>@Html.ActionLink("Home", "Index", "Home")</p>